      "source": [
        "<a href=\"https://colab.research.google.com/github/LilpatrickFf/1mil/blob/main/Ml%20advanced%20ipynb\" target=\"_parent\"><img src=\"https://colab.research.google.com/assets/colab-badge.svg\" alt=\"Open In Colab\"/></a>"
